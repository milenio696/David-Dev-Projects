@{
    ViewData["Title"] = "Home Page";
}


@if (!string.IsNullOrEmpty(ViewBag.NombreUsuario))
{
    <div class="display-4">
        Hola @ViewBag.NombreUsuario
    </div>
}

<div class="container mt-5">
    <div class="text-center">
        <h1>Bienvenido al Sistema de Gestión del Campeonato Internacional de BattleFight</h1>
        <p class="mt-3">
            El <strong>Campeonato Internacional de BattleFight</strong> es un evento emocionante que reúne a los mejores equipos de jugadores en competiciones épicas.
            Para gestionar de manera eficiente los torneos, equipos y usuarios relacionados con este campeonato, se ha desarrollado un sistema que facilita
            la administración de los principales componentes.
        </p>
    </div>
</div>


