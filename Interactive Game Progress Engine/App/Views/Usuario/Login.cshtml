@model BattleFightGrupo1.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<script>
    var menu = document.getElementById("menu");
    menu.style.display = "none";
</script>

<div class="loginContainer">
    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }
    <form asp-action="Login" class="form-container">
        <h1>Ingresar</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="UsuarioLogin" class="control-label"></label>
            <input asp-for="UsuarioLogin" name="user" class="form-control" required />
            <span asp-validation-for="UsuarioLogin" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Contrasena" class="control-label"></label>
            <input asp-for="Contrasena" type="password" name="pass" required class="form-control" />
            <span asp-validation-for="Contrasena" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group text-end">
            <input type="submit" value="Ingresar" class="btn btn-primary" style="background-color:#544E48" />
        </div>
        <br /><br />
    </form>
</div>

